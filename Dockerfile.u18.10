FROM ubuntu:18.10

LABEL maintainer="poloniodavide@gmail.com"

RUN apt-get update && apt-get install -y \
    autotools-dev \
    automake \
    autoconf \
    build-essential \
    wget \
    git \
    libboost-all-dev \
    libpcap-dev \
    libjsoncpp-dev \
    openjdk-8-jdk-headless \
    libtins-dev && \
    wget https://github.com/Augugrumi/libviface/releases/download/v1.1.1/libviface_1.0.0.deb && \
    dpkg -i libviface_1.0.0.deb && \
    rm -rf /var/lib/apt/lists/*

RUN git clone https://github.com/LaKabane/libtuntap.git && \
    cd libtuntap && \
    mkdir build && \
    cd build && \
    cmake ../ -DENABLE_CXX=true && \
    make && \
    make install && \
    ldconfig

RUN mkdir -p /build/
VOLUME /build/
WORKDIR /build/

COPY builder.sh /usr/bin/builder
ENTRYPOINT ["builder"]
